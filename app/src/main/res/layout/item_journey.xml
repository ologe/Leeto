<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="olog.dev.leeto.utility.DateUtils"/>
        <variable
            name="journey"
            type="olog.dev.leeto.model.pojo.Journey"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:elevation="10dp">

        <!--scrim-->

        <View
            android:id="@+id/scrim"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@android:color/white" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/journeyName"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Viaggio a New York"
            android:textSize="30sp"
            android:textColor="@color/dark_grey"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_margin="16dp"
            android:text="@{journey.getName}"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/journeyDate"
            app:layout_constraintTop_toBottomOf="@+id/journeyName"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{DateUtils.toString(journey.getFirstStop().getDate())}"
            tools:text="24-06-2017"
            android:textColor="@color/grey600"
            android:textSize="12sp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:drawableStart="@drawable/vd_calendar"
            android:gravity="center"
            android:drawablePadding="6dp"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/location"
            app:layout_constraintTop_toBottomOf="@+id/journeyName"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Parma"
            android:textSize="12sp"
            android:text="@{journey.getFirstStop().getLocation().getName()}"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:drawableEnd="@drawable/vd_location"
            android:drawablePadding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:maxLength="20"
            android:ellipsize="end"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/journeyDescription"
            app:layout_constraintTop_toBottomOf="@id/journeyDate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="@tools:sample/lorem"
            android:textColor="@color/dark_grey"
            android:text="@{journey.shortDescription}"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp" />


    </android.support.constraint.ConstraintLayout>

</layout>
